		<tr>
			<th>Id</th>
			<td>{{ episode.id }}</td>
		</tr>
		<tr>
			<th>Title</th>
			<td>{{ episode.title }}</td>
		</tr>
		<tr>
			<th>Number</th>
			<td>{{ episode.number }}</td>
		</tr>
		<tr>
			<th>Synopsis</th>
			<td>{{ episode.synopsis }}</td>
